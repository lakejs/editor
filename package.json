{
  "name": "lakejs",
  "description": "Rich text editor based on the browser",
  "version": "0.0.1",
  "author": "Luo Longhao <luolonghao@gmail.com>",
  "license": "MIT",
  "homepage": "http://lakejs.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/lakejs/lake.git"
  },
  "keywords": [
    "rich text",
    "wysiwyg",
    "editor"
  ],
  "bugs": {
    "url": "https://github.com/lakejs/lake/issues"
  },
  "dependencies": {
    "eventemitter3": "^4.0.7"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.3",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.1.0",
    "@rollup/plugin-terser": "^0.4.3",
    "@rollup/plugin-typescript": "^11.1.2",
    "@types/chai": "^4.3.5",
    "@types/jest": "^29.5.3",
    "@typescript-eslint/eslint-plugin": "^6.2.1",
    "@typescript-eslint/parser": "^6.2.1",
    "chai": "^4.3.7",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^8.9.0",
    "eslint-plugin-jest": "^27.2.3",
    "eslint-plugin-markdown": "^3.0.1",
    "http-server": "^14.1.1",
    "jest": "^29.6.2",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.1",
    "rollup": "^3.27.0",
    "simple-git-hooks": "^2.9.0",
    "ts-jest": "^29.1.1",
    "tslib": "^2.6.1",
    "typescript": "^5.1.6"
  },
  "scripts": {
    "start": "npm-run-all --parallel --print-label watch serve",
    "watch": "rollup --watch --config rollup.config.dev.mjs",
    "serve": "http-server . --port 8080",
    "build": "rimraf ./lib/ && rollup --config rollup.config.build.mjs",
    "lint": "eslint . --config .eslintrc.cjs",
    "test": "jest --config jest.config.cjs",
    "coverage": "jest ---config jest.config.cjs --coverage"
  },
  "simple-git-hooks": {
    "pre-commit": "npm run lint"
  }
}
