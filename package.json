{
  "name": "lake-lib",
  "description": "Rich text editor based on the browser",
  "version": "0.0.1",
  "author": "Luo Longhao <luolonghao@gmail.com>",
  "license": "MIT",
  "homepage": "http://lakejs.com",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lakejs/lake.git"
  },
  "main": "./lib/lake",
  "files": [
    "dist",
    "lib"
  ],
  "keywords": [
    "rich text",
    "wysiwyg",
    "editor"
