    "typesafe-i18n": "^5.26.2"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/chai": "^4.3.14",
    "@types/mocha": "^10.0.6",
    "@types/sinon": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^7.5.0",
    "@typescript-eslint/parser": "^7.5.0",
    "chai": "^4.4.1",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "express": "^4.19.2",
    "mocha": "^10.4.0",
    "multer": "1.4.5-lts.1",
    "npm-run-all": "^4.1.5",
    "puppeteer": "^22.6.2",
    "rimraf": "^5.0.5",
    "rollup": "^4.14.0",
    "rollup-plugin-import-css": "^3.5.0",
    "rollup-plugin-svg-import": "^3.0.0",
    "simple-git-hooks": "^2.11.1",
    "sinon": "^17.0.1",
    "tslib": "^2.6.2",
    "typescript": "^5.4.4"
  },
  "scripts": {
    "start": "npm-run-all --parallel --print-label express watch",
    "express": "node ./scripts/start-server.mjs",
    "watch": "rollup --watch --config rollup.config.mjs",
    "build": "rimraf ./dist ./lib & rollup --config rollup.config.mjs",
    "i18n": "typesafe-i18n --no-watch",
    "lint": "eslint . --config .eslintrc.cjs --ext \".ts,.js,.cjs,.mjs\"",
    "test": "node ./scripts/run-tests.mjs",
    "clean": "rimraf ./dist ./lib ./temp"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint"
  },
  "packageManager": "pnpm@8.15.6"
}
