{
  "include": [
    "src/**/*",
    "examples/**/*",
    "tests/**/*",
    "assets/**/*.ts"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "lakelib/*": ["src/*"],
      "lakelib": ["src"]
    },
    "moduleResolution": "node",
    "target": "es6",
    "allowJs": false,
    "removeComments": false,
    "strict": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "esModuleInterop": true
  }
}
